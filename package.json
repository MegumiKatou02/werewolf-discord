{
  "name": "werewwolf-discord",
  "version": "3.0.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc",
    "start": "npm run build && node --expose-gc --trace-warnings dist/index.js",
    "start:production": "npm run build && node --expose-gc --trace-warnings --max-old-space-size=512 dist/index.js",
    "dev": "npx tsc && node --expose-gc dist/index.js",
    "deploy": "node dist/deploy-commands.js",
    "deploy:guild": "node dist/deploy-guild-commands.js",
    "dev:watch": "npx tsx watch index.ts",
    "dev:ts": "npx tsx index.ts",
    "format": "npx prettier --write .",
    "format:file": "npx prettier --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "prepare": "husky"
  },
  "keywords": [
    "werewwolf"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "description": "",
  "dependencies": {
    "canvas": "^3.1.0",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "mongoose": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
